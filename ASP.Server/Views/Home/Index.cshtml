@using ASP.Server.Controllers
@model StatistiqueModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <div class="container">
        <h3 class="text-center my-5">Statistiques</h3>

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Nombre total de livres</h5>
                        <p class="card-text">@Model.NbBooks</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Nombre minimum de mots dans un contenu</h5>
                        <p class="card-text">@Model.MinWords</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Nombre maximum de mots dans un contenu</h5>
                        <p class="card-text">@Model.MaxWords</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mediane du nombre de mots dans un contenu</h5>
                        <p class="card-text">@Model.MedWords</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Moyenne de mots dans un contenu</h5>
                        <p class="card-text">@Model.AvgWords</p>
                    </div>
                </div>
            </div>
        </div>
        <br/>
        <div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Author</th>
                        <th scope="col">Book number</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (KeyValuePair<string, int> kvp in Model.NbBooksByAuthor)
                    {

                        <tr>
                            <td>@kvp.Key</td>
                            <td>@kvp.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
