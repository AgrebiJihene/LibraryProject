@using ASP.Server.Controllers
@model CreateGenreModel
@{
    ViewData["Title"] = "Add a genre";
}
<style>
    .input-group {
        margin-top: 10px;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    input, textarea, select {
        flex-basis: 85%;
    }

    label {
        flex-basis: 10%;
    }
</style>

<h1>Add a new genre</h1>
<form asp-controller="Genre" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" id="Name" asp-for="Name" />
    </div>
    <div class="d-flex justify-content-center">
        <input class="btn btn-primary" type="submit" value="Add" style="width: 10%; margin-top: 50px; flex-basis: auto" />
    </div>
</form>