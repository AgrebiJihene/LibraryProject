@using ASP.Server.Controllers
@model EditBookModel
@{
    ViewData["Title"] = "Edit a book";
}
<style>
.input-group {
    margin-top:10px;
    display:flex;
    justify-content:space-between;
    flex-wrap:wrap;
}
input, textarea, select {
    flex-basis:85%;
}
label {
    flex-basis:10%;
}
</style>

<!-- Voici une facon de faire, mais ce n'est pas la seul, a vous de jouer ! -->
<form asp-controller="Book" asp-action="EditBook">

    <input type="hidden" value="@Model.Id" name="id" />
    <div class="input-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div class="input-group">
        <label asp-for="Content"></label>
        <input asp-for="Content" />
    </div>
    <div class="input-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.1"/>
    </div>
    <div class="input-group">
        <label asp-for="Genres"></label>
        <!--Si la page rend une erreur a cette ligne, c'est que vous n'avez pas envoyé la liste des genres dans le Controller !!! ! -->
        <select asp-for="Genres" asp-items="@(new SelectList(Model.AllGenres,"Id","Name"))">
        </select>
    </div>
    <input type="submit" value="Edit" style="width: 100%; margin-top: 50px" />
</form>