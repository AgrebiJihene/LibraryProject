@using ASP.Server.Controllers
@model EditBookModel
@{
    ViewData["Title"] = "Edit a book";
}
<style>
    .input-group {
        margin-top: 10px;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    input, textarea, select {
        flex-basis: 85%;
    }

    label {
        flex-basis: 10%;
    }
</style>

<form asp-controller="Book" asp-action="EditBook">
    <input type="hidden" value="@Model.Id" name="id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" id="Title" asp-for="Title" />
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input class="form-control" id="Author" asp-for="Author" />
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <input class="form-control" asp-for="Content" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" type="number" step="0.1" />
    </div>
    <div class="form-group">
        <label asp-for="Genres"></label>
        <select id="Genres" class="form-control" asp-for="Genres" asp-items="@(new SelectList(Model.AllGenres,"Id","Name"))">
        </select>
    </div>
    <div class="d-flex justify-content-center">
        <input class="btn btn-primary" type="submit" value="Edit" style="width: 10%; margin-top: 50px; flex-basis: auto" />
    </div>
</form>
