<Page x:Class="WPF.Reader.Pages.Acceuil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF.Reader.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:vm="clr-namespace:WPF.Reader.ViewModel"
      d:DataContext="{d:DesignInstance Type=vm:Acceuil, d:IsDesignTimeCreatable=True}"
      Title="Acceuil">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button  Command="{Binding PageBooksSelectedCommand}" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200" Content="List Books" Margin="0,0,0,27" FontSize="18px"/>
            <Button  Command="{Binding PageGenresSelectedCommand}" Height="50" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Content="List Genres" Margin="0,0,0,27" FontSize="18px"/>
        </StackPanel>
    </Grid>
</Page>
